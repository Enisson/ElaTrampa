@model ElaTrampa.Models.Candidato

@section Stylesheets{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/contato.css" />
}

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Candidato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="campo">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="input" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="input" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="campo">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="input" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="campo">
                <input type="submit" value="Salvar" class="botaoVagas" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
