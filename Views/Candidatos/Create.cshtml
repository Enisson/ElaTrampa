@model ElaTrampa.Models.Candidato

@section Stylesheets{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/cadastro.css" />
    
    
}

@{
    ViewData["Title"] = "Cadastrar Candidatos";
}

<h1>Criar Candidato</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="grupo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="campo">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="input" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="botaoVagas" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
